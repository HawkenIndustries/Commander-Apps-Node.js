			.brand-logo
				margin-left 15px
		.head-icon
			height 28px
			margin-right 15px
		.head-link
			text-decoration none
			height 28px
			padding-top 4px
			margin-right 16px
			color #aaa
		.header-link
			text-decoration none
			color #aaa
			font-size 16px
			cursor pointer
			display inline-block
			padding-top 0
			height 32px
			top 2px
			//margin 0 20px
			margin 0 13px
			position relative
			@media (max-width 767px)
				top 8px
				left -12px
			&.active
				color #000
				.header-link-ul
					width 50%
			.icon
				margin-right 7px
				font-size 18px
				position relative
				top 0px
			.header-link-ul
				background-color brandColor
				height 2px
				width 0
				position absolute
				bottom -5px
				transition 0.3s ease
			.header-link-u1
				left 50%
			.header-link-u2
				right 50%
			&:hover
				color #000
				.header-link-ul
					width 50%
					transition width 0.5s ease
		
			
