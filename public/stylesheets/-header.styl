-header()
	& > header
		a.button-collapse
			i
				font-size 30px
			span
				line-height 50px
			position relative
			float right
			width 50px
			height 50px
			margin-right 0px
			margin-left 5px
			top 20px
			padding 0
		ul.side-nav
			overflow auto
			width 120px // called by .sidenav()?
			background-color secondaryBackgroundColor				
			li.faded
				opacity .3
			li.menu-item
				.collapsible-header
					height 90px
					width: 100%
					padding-left 0
					padding-right 0
					&:hover
						// background-color lighten(secondaryBackgroundColor, 10%)
						background-color #2196F3
						span
							color primaryColor
					&.active 
						span
							color primaryColor
				.collapsible-body
					ul
						box-shadow: inset 0 16px 24px 2px rgba(0,0,0,0.14), inset 0 6px 30px 5px rgba(0,0,0,0.12), inset 0 8px 10px -5px rgba(0,0,0,0.3), inset 0 -8px 10px -5px rgba(0,0,0,0.3)
					padding 0
					background-color secondaryForegroundColor
					li.sub-menu-item.active
						background-color lighten(#2196F3, 10%)
				height 100%
			li
				&.active
					// background-color lighten(secondaryBackgroundColor, 30%)
					background-color lighten(#2196F3, 10%)
					i
						color primaryColor
					&:hover
						// background-color lighten(secondaryBackgroundColor, 30%)
						background-color lighten(#2196F3, 10%)
						span
							color primaryColor
						i
							color primaryColor
				&:hover
					// background-color lighten(secondaryBackgroundColor, 10%)
					background-color #2196F3
					span
						color lighten(primaryColor, 10%)
					i
						color lighten(primaryColor, 10%)
				a,div.icon-container
					height 90px
					@media only screen and (max-width: 992px)
						padding 0 32px
					span
						color transparent
						position absolute
						width 120px // Prevents scrollbar shifting the text.
						bottom -6px
						left 0px
						text-align center
					i
						font-size 32px
						color primaryColor
						margin-left 16px
						margin-top 18px
				div.icon-container
					padding-left 0
					padding-right 0
					i 
						margin-left 46px
				&.small
					height 40px
					a
						height 40px
						i
							font-size 32px
							margin-top -4px
							&.underlay
								// margin-left 50px
								// margin-top -48px
								// transform: rotateZ(90deg);
					&:hover
						i
							color transparent
				


		nav
			// margin-bottom 20px
			background-color foregroundColor
			// padding 12px 0px
