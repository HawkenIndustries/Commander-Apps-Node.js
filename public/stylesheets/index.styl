brandRed = #E57373
brandGreen = #81C784
brandGray = rgb(151,154,153)
brandGrayDark = rgb(101,104,103)
brandYellow = #fff176

html
  font-size 100%
  //- font declarations
  color primaryColor
  font-weight 400
  font-family 'Open Sans', sans-serif
  font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  ion-font()

html *
  //- don't show outlines
  outline 0

body

  .row
    /*
      Autofill Colorings
      This gets rid of the yellow background and changes the text color.
    */
    input,select
      &:-webkit-autofill
        -webkit-box-shadow: 0 0 0 1000px foregroundColor inset !important;
        -webkit-text-fill-color: primaryColor;
        transition: background-color 100000000s ease-in-out 0s; // Basically sets it to never transition to yellow.
        -webkit-animation: 1ms void-animation-out;

  background-color backgroundColor
  font-weight 400
  font-family 'Open Sans', sans-serif
  // modals here

  -header()

  & > main, & > header, & > footer
    //- page content here
    @media only screen and (max-width: 992px)
      padding-left 0
    .container
      @media only screen and (min-width: 993px)
        width 95%
        max-width inherit

  -footer()

h1, h2, h3, h4, h5, h6
  font-weight 300

h4.title
  margin-bottom: 0px
  display: inline-block

.input-field label:not(.active):after // Fix materialize label https://stackoverflow.com/a/44243830/2446254
  font-size 0.8rem
  -webkit-transform translateY(-140%)
  -moz-transform translateY(-140%)
  -ms-transform translateY(-140%)
  -o-transform translateY(-140%)
  transform translateY(-140%)

