table.highlight
  td
    border-radius 0
  th
    border-radius 0

table.highlight>tbody>tr:hover
  background-color #085691

table.small
  td
    padding 10px 5px
table.xsmall
  td
    padding 5px 5px

.input-field > label // for jQueryValidation on Standard input/label formats.
  width 100%
  padding-right 1.5rem
  &:after
    padding-top: 3px;

.btn.foregroundColor
  &:hover
    background-color lighten(foregroundColor, 10%)
  &:focus
    background-color darken(foregroundColor, 10%)

*::-webkit-scrollbar
  background-color rgba(0,0,0,0.3)
*::-webkit-scrollbar-corner
  background-color secondaryForegroundColor
*::-webkit-scrollbar-thumb
  background-color foregroundColor
  box-shadow 0 4px 5px 0 rgba(0,0,0,0.14), 0 1px 10px 0 rgba(0,0,0,0.12), 0 2px 4px -1px rgba(0,0,0,0.3)

table.striped.secondaryForegroundColor
  &>tbody
    &>tr:nth-child(odd)
      background-color foregroundColor
    &>tr:nth-child(even)
      background-color secondaryForegroundColor
table.highlight.secondaryForegroundColor
  border-bottom none
  display block
  width 100%
  &>tbody
    &>tr:hover
      background-color foregroundColor

.foregroundColorBorder
  border 1px solid foregroundColor
  &.secondaryForegroundColor
    border 1px solid foregroundColor

.text-ellipsis
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

.text-left
  text-align left
.text-right
  text-align right

ul.collapsible
  border 0
  .disabled,.disabled:hover
    .collapsible-header
      background-color brandGrayDark
      border-top-color brandGrayDark
      border-right-color brandGrayDark
      border-bottom-color brandGrayDark
      border-left-color brandGray


.border-left-red
  border-left-color brandRed !important
.border-left-green
  border-left-color brandGreen !important
.border-left-yellow
  border-left-color brandYellow !important

.card
  background-color foregroundColor
  .card-header
    position relative
    background-color inherit
    border-bottom 1px solid rgba(160,160,160,0.2)
    padding 20px

.btn, .btn-large, .btn-flat
  text-transform none
  margin 0px 2px
  &.no-margin
    margin: 0px;

.btn-sm
  height 28px
  line-height 28px
  padding 0 1rem

// Globally saying that all flat button text/icons should be white.
a.btn-flat
  color #f

.main-icon
  display inline-block
  position relative
  left 0px;
  top 0px;
  img
    position relative;
    top 8px;
    left 16px;
    height  50px;

.app-title
  line-height 48px
  font-size 24px
  // font-weight 300
  font-weight 400

.loadable
  display none

