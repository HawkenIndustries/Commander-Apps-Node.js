@require "-header"
@require "-footer"

rhythm(_ratio, _line-height)
  font-size (_line-height * _ratio)
  line-height _line-height

brandColor = #0099ff

primaryColor = #e9e5f8
secondaryColor = #9795ce
backgroundColor = #010e18
secondaryBackgroundColor = #03253f
foregroundColor = #085691
