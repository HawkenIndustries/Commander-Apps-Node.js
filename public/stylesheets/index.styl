  td
    padding-top 0
    padding-bottom 0
  .badge
    float left
    margin-left 0
    margin-right 14px
    margin-top 2px
    margin-bottom 2px
    line-height 18px
.pointView-haskind
    background-color #563671
.pointView.hidden
